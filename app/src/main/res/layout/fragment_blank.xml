<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BlankFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView70"
                android:layout_width="180dp"
                android:layout_height="176dp"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="16dp"
                app:srcCompat="@drawable/iphone11"
                tools:src="@tools:sample/avatars" />

            <Button
                android:id="@+id/button70"
                android:layout_width="178dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView70"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/purple_light"
                android:text="I Phone 11\nBuy Now"
                android:textColor="@color/white"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/imageView80"
                android:layout_width="180dp"
                android:layout_height="178dp"
                android:layout_marginEnd="4dp"
                android:layout_marginBottom="2dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/shirt9" />

            <Button
                android:id="@+id/button80"
                android:layout_width="179dp"
                android:layout_height="58dp"
                android:layout_below="@id/imageView80"
                android:layout_alignEnd="@id/imageView80"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/purple_light"
                android:text="Polo Shirt\nBuy Now"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView86"
                android:layout_width="184dp"
                android:layout_height="128dp"
                android:layout_below="@+id/button70"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/sneaker1" />

            <Button
                android:id="@+id/button86"
                android:layout_width="177dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView86"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/purple_light"
                android:text="Hamer\nBuy Now"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageView79"
                android:layout_width="175dp"
                android:layout_height="138dp"
                android:layout_below="@+id/button80"
                android:layout_alignEnd="@id/button80"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="2dp"
                app:srcCompat="@drawable/shirt2"
                tools:src="@tools:sample/avatars" />

            <Button
                android:id="@+id/button79"
                android:layout_width="173dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView79"
                android:layout_alignEnd="@id/imageView79"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/purple_light"
                android:text="Shirt \nBuy Now"
                android:textColor="@color/white"
                android:textSize="16sp" />


        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>