<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shirt1cartActivity">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="138dp"
        android:layout_height="129dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/shirt8" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginStart="180dp"
        android:textStyle="bold"
        android:textSize="30dp"
        android:text="Polo Shirt" />


    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="310dp"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Quantity" />

    <Button
        android:id="@+id/button5"
        android:layout_width="63dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/purple_light"
        android:text="-" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="50dp"
        android:layout_height="37dp"
        android:layout_marginStart="247dp"
        android:layout_marginTop="315dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="1" />

    <Button
        android:id="@+id/button6"
        android:layout_width="67dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="300dp"
        android:backgroundTint="@color/purple_light"
        android:text="+" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="410dp"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Price" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="206dp"
        android:layout_height="49dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="410dp"
        android:text="5,000"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="507dp"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Phone Number" />

    <EditText
        android:id="@+id/editTextPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="165dp"
        android:layout_marginTop="500dp"
        android:ems="10"
        android:inputType="phone" />

    <TextView
        android:id="@+id/textView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="607dp"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="Address" />

    <EditText
        android:id="@+id/editTextTextPostalAddress"
        android:layout_width="326dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="600dp"
        android:ems="10"
        android:inputType="textPostalAddress" />

    <TextView
        android:id="@+id/textView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="707dp"
        android:layout_marginStart="4dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Payment Methods" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"
        android:layout_marginStart="180dp"
        android:orientation="horizontal"
        >

        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="132dp"
            android:layout_height="wrap_content"

            android:text="Online Paymnet" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="wrap_content"
            android:layout_height="59dp"

            android:text="Cash On delivery" />

    </RadioGroup>

    <Button
        android:id="@+id/button7"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="850dp"
        android:backgroundTint="@color/purple_light"
        android:text="Buy" />




</RelativeLayout>